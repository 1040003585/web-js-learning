{
"manifest_version":2,

"name":"one-click hello_world3",
"description":"my first chrome extension-background",
"version":"1.0",
"permissions":[
    "tabs",
    "http://*/*"
    ],
"background": {
    "scripts": ["bg.js"],
    "persistent": false
},
"page_action": {
    "default_name": "Hello world",
    //"default_icon": "marker.png",
    "default_popup": "popup.html"
    }
}
